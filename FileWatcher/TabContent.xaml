<UserControl x:Class="FilWatcher.TabContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="Gray">
            <TextBlock Text=" Path -> " FontFamily="Consolas" FontSize="10pt" />
            <TextBlock Name="FilePath" FontFamily="Consolas" FontSize="10pt" />
        </StackPanel>
        <TextBox
            Name="FileContent" 
            AutoWordSelection="True" 
            VerticalScrollBarVisibility="Auto" 
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True" 
            FontFamily="Consolas" FontSize="10pt" />

    </DockPanel>
</UserControl>
